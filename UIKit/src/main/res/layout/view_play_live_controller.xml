<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@color/abc_new_b2_80"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/tv_live_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/abc_b9"
            android:textSize="@dimen/abc_f4"
            />


        <TextView
            android:id="@+id/tv_page_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/abc_new_b4"
            android:textSize="@dimen/abc_f5"
            android:visibility="gone"/>


        <ImageView
            android:id="@+id/iv_key_board"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:src="@drawable/abc_ic_key_board"/>

        <ImageView
            android:id="@+id/iv_msg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_key_board"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/abc_iv_msg"/>


        <TextView
            android:id="@+id/tv_ask_question"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/iv_msg"
            android:background="@drawable/abc_dati_background"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/abc_dati"
            android:textColor="@color/abc_w1"
            android:textSize="11sp"
            />

        <ImageView
            android:id="@+id/iv_change_wb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/tv_ask_question"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/abc_new_b2_80"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/abc_ic_back"/>

        <com.abc.live.widget.common.ABCRoomNameView
            android:id="@+id/auto_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_hand_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/abc_wb_hand_up"
            android:visibility="gone"/>


        <ImageView
            android:id="@+id/iv_net_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:src="@drawable/abc_ic_setting"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:src="@drawable/abc_play_live_share"/>
    </LinearLayout>


</RelativeLayout>